@model Footer

<footer class="footer_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="footer_top flex-column">
                    <div class="footer_logo">
                        <a href="@Url.ActionLink("Index", "Home")">
                            <img src="@(Model.ImageUrl)" alt="">
                        </a>
                        <div class="d-lg-block d-none">
                            <nav class="navbar navbar-expand-lg navbar-light justify-content-center">
                                <div class="collapse navbar-collapse offset">
                                    <ul class="nav navbar-nav menu_nav mx-auto">
                                        @foreach (var navLink in Model.NavigationLinks)
                                        {
                                            <li class="nav-item"><a class="nav-link text-white" asp-action="@navLink.Action" asp-controller="@navLink.Controller">@navLink.Label</a></li>
                                        }
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                    <div class="footer_social mt-lg-0 mt-4">
                        @foreach (var socLink in Model.SocialLinks)
                        {
                            <a href="@socLink.Url" target="_blank"><i class="fab fa-@socLink.Icon"></i></a>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="row footer_bottom justify-content-center">
            <p class="col-lg-8 col-sm-12 footer-text">
                Copyright &copy;
                <script>document.write(new Date().getFullYear());</script>
                All rights reserved by <a href="@Model.CopyLink.Url" target="_blank">@Model.CopyLink.Label</a> @DateTime.Now.Year
            </p>
        </div>
    </div>
</footer>