@inherits Umbraco.Web.Mvc.UmbracoViewPage<ContentModels.Home>
@using ContentModels = Umbraco.Web.PublishedModels;

<section id="featured-services" class="featured-services">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-6">
                <div class="icon-box">
                    <div class="icon"><i class="icofont-computer"></i></div>
                    <h4 class="title"><span>@Model.Service1</span></h4>
                    <p class="description">@Model.Service1Value</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mt-4 mt-md-0">
                <div class="icon-box">
                    <div class="icon"><i class="icofont-image"></i></div>
                    <h4 class="title"><span>@Model.Service2</span></h4>
                    <p class="description">@Model.Service2Value</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mt-4 mt-lg-0">
                <div class="icon-box">
                    <div class="icon"><i class="icofont-tasks-alt"></i></div>
                    <h4 class="title"><span>@Model.Service3</span></h4>
                    <p class="description">@Model.Service3Value</p>
                </div>
            </div>
        </div>
    </div>
</section>
